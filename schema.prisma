generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserPosition {
  MEMBER
  EXEC
  ADMIN
}

model User {
  email         String            @id
  name          String
  preferredName String?
  prefect       String
  pronouns      String
  gradYear      Int
  position      UserPosition      @default(MEMBER)
  registeredAt  DateTime          @default(now())
  events        EventAttendance[] @relation("EventAttendee")
  birthday      String
  referredBy    String?
  sgoSticker    Boolean

  eventAlerts Boolean
  lastUpdated DateTime @default(now())
}

model Event {
  id          String            @id @default(cuid())
  name        String
  description Bytes
  maxPoints   Float
  maxHours    Float
  attendees   EventAttendance[]
  eventTime   DateTime
  imageURL    String?
  createdAt   DateTime          @default(now())
}

model EventAttendance {
  id           String   @id @default(cuid())
  user         User     @relation("EventAttendee", fields: [userEmail], references: [email])
  userEmail    String
  event        Event    @relation(fields: [eventId], references: [id])
  eventId      String
  earnedPoints Float    @default(0)
  earnedHours  Float    @default(0)
  registeredAt DateTime @default(now())
  attended     Boolean  @default(false)

  @@index([userEmail])
  @@index([eventId])
  @@map("EventAttendee")
}
